PAYROLL_WEB_HOST=0.0.0.0
PAYROLL_WEB_PORT=8080
PAYROLL_DATA_DIR=/var/data

# Session cookie settings (recommended for HTTPS production).
PAYROLL_COOKIE_SECURE=1
PAYROLL_COOKIE_SAMESITE=Lax
PAYROLL_SESSION_COOKIE_NAME=payroll_session
PAYROLL_SESSION_TTL_SECONDS=604800

# Registration policy:
# 1 = anyone can register from login page
# 0 = registration endpoint disabled (recommended after first admin account exists)
PAYROLL_ALLOW_REGISTRATION=1
